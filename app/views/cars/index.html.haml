.container 
  .row
    %h1 マイカー一覧
    = link_to '新規登録', new_car_path, class:["btn","btn-primary"]
  .row
    - @car.each do |car|
      .col-3
        =link_to '削除', car_path(car.id), method: :delete, class: "btn btn-danger"
        = link_to edit_car_path(car.id) do
          .card
            .card-body
              .row
                %p= "#{car.vehicle_type}"
              .row
                %p= "#{car.city}"           
                %p= "#{car.class_number}"
              .row
                %p= "#{car.registration_type}"
                %p= "#{car.designated_number}"


