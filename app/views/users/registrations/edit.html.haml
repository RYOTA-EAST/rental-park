.container
  .d-flex
    .left-content
      .row
        %h2
          Edit #{resource_name.to_s.humanize}
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "users/shared/error_messages", resource: resource
        .row
          .field.mb-1
            = f.label :nickname
            %br/
            = f.text_field :nickname, autofocus: true
          .field
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
        .row
          .field
            = f.label :password
            %i (leave blank if you don't want to change it)
            %br/
            = f.password_field :password, autocomplete: "new-password"
            - if @minimum_password_length
              %br/
              %em
                = @minimum_password_length
                characters minimum
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password"
        .row
          .field
            = f.label :current_password
            %i (we need your current password to confirm your changes)
            %br/
            = f.password_field :current_password, autocomplete: "current-password"
        .row
          .field
            = f.label :last_name
            %br/
            = f.text_field :last_name, autofocus: true
          .field
            = f.label :first_name
            %br/
            = f.text_field :first_name, autofocus: true
        .row
          .field
            = f.label :last_name_kana
            %br/
            = f.text_field :last_name_kana, autofocus: true
          .field
            = f.label :first_name_kana
            %br/
            = f.text_field :first_name_kana, autofocus: true
        .row
          .field
            = f.label :postal_code
            %br/
            = f.text_field :postal_code, autofocus: true
        .row
          .field
            = f.label :prefecture
            %br/
            = f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-select"})
          .field
            = f.label :city
            %br/
            = f.text_field :city, autofocus: true
          .field
            = f.label :address
            %br/
            = f.text_field :address, autofocus: true
          .field
            = f.label :explosive
            %br/
            = f.text_field :explosive, autofocus: true
        .row
          .field
            = f.label :phone_number
            %br/
            = f.text_field :phone_number, autofocus: true
        .row
          .actions
            = f.submit "Update"
    .right-content
      .row
        %h3 Cancel my account
      .row
        %p
          Unhappy? 
      .row
        #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
  .down-conrent
    .row
      = link_to "Back", :back
